<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%=t("editing_store_credit_type")%> : <%= @store_credit_type.name %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t(:new_store_credit_type), new_object_url, :icon => 'icon-plus', :id => 'admin_new_store_credit_type_link' %>
  </li>
<% end %>

<%= render 'spree/shared/error_messages', :target => @store_credit_type %>

<%= form_for(:store_credit_type, :url => object_url, :html => { :method => :put }) do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <%= render :partial => "spree/admin/shared/edit_resource_links" %>
<% end %>
